[Unit]
Description=Django WSGI via Gunicorn
After=network.target

[Service]
User=deploy
WorkingDirectory=/srv/app/repo
EnvironmentFile=/srv/app/shared/.env
ExecStart=/srv/app/venv/bin/gunicorn config.wsgi:application --bind unix:/run/gunicorn.sock
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
